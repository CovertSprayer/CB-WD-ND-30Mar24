<% layout('/layouts/boilerplate.ejs') -%>

  <div class="d-flex flex-wrap gap-4 justify-content-center">
    <% for(let product of products) { %>
      <div class="card" style="width: 20rem;">
        <img style="height: 12rem;" src="<%= product.image %>" class="card-img-top" alt="...">
        <div class="card-body">
          <h5 class="card-title d-flex justify-content-between align-items-center">
            <span><%= product.name %></span>
            <span>
              <% if (user?.wishlist?.includes(product._id)) { %>
               <i id="<%= product._id %>" class="fa-solid fa-heart"></i>
               <% } else { %>
                <i id="<%= product._id %>" class="fa-regular fa-heart"></i>
              <% } %>
            </span>
          </h5>
          <p class="card-text">â‚¹ <%= product.price %></p>
          <p class="card-text"><%= product.description %></p>
          <a href="/products/<%= product._id %>" class="btn btn-sm btn-primary">Show</a>
        </div>
      </div>
    <% } %>
  </div>
